@using Library.Models
@model List<Book>
@{
    ViewData["Title"] = "Books Library";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-book me-2"></i>
            Books Library
        </h2>
        <div>
            <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Index">
                <i class="bi bi-person-circle me-1"></i>
                My Account
            </a>
            <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right me-1"></i>
                Logout
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="bi bi-search me-2"></i>
                Search Books
            </h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <form method="get" asp-controller="Book" asp-action="Search" class="d-flex">
                        <input type="text" 
                               name="searchKey" 
                               class="form-control me-2" 
                               placeholder="Search by title..." />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-md-6">
                    <form method="get" asp-controller="Book" asp-action="SearchByAuthor" class="d-flex">
                        <input type="text" 
                               name="authorName" 
                               class="form-control me-2" 
                               placeholder="Search by author..." />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%;">ID</th>
                            <th style="width: 35%;">Title</th>
                            <th style="width: 30%;">Author</th>
                            <th style="width: 25%;" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var b in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@b.BookId</td>
                                    <td>
                                        <i class="bi bi-book me-2 text-primary"></i>
                                        @b.Title
                                    </td>
                                    <td>
                                        <i class="bi bi-person me-2 text-muted"></i>
                                        @b.Author
                                    </td>
                                    <td class="text-center">
                                        @if (b.UserId == null)
                                        {
                                            <a asp-action="Borrow" 
                                               asp-route-id="@b.BookId" 
                                               class="btn btn-success btn-sm">
                                                <i class="bi bi-bookmark-plus me-1"></i>
                                                Borrow
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-bookmark-check me-1"></i>
                                                Borrowed
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No books found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
    
    .card {
        border-radius: 10px;
        border: none;
    }
    
    .btn-sm {
        padding: 6px 16px;
        font-size: 0.875rem;
    }
    
    .badge {
        padding: 8px 12px;
        font-size: 0.85rem;
        font-weight: 500;
    }
</style>
