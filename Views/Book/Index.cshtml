@using Library.Models
@model List<Book>

<div style="text-align: left; margin-bottom: 20px;">
    <a class="btn btn-primary" asp-controller="User" asp-action="Index">
        My Account
    </a>
</div>

<div style="text-align: left; margin-bottom: 20px;">
    <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">
      Logout
    </a>
</div>

<h2>Books List</h2>

<form method="get" asp-controller="Book" asp-action="Search" style="margin-bottom:10px;">
    Search by Title:
    <input type="text" name="searchKey" />
    <button type="submit">Search</button>
</form>


<form method="get" asp-controller="Book" asp-action="SearchByAuthor" style="margin-bottom:20px;">
    Search by Author:
    <input type="text" name="authorName" />
    <button type="submit">Search</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Borrow</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var b in Model)
            {
                <tr>
                    <td>@b.BookId</td>
                    <td>@b.Title</td>
                    <td>@b.Author</td>

                 
                    <td>
                        @if (b.UserId == null)
                        {
                            <a asp-action="Borrow" asp-route-id="@b.BookId" class="btn btn-success">
                                Borrow
                            </a>
                        }
                        else
                        {
                            <span class="text-danger">Borrowed</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No books found</td>
            </tr>
        }
    </tbody>
</table>
