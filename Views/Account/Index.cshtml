@{
    ViewData["Title"] = "Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="card-title mb-4 fw-bold">Welcome</h2>
                    <p class="text-muted mb-4">Please choose an option to continue</p>
                    
                    <div class="d-grid gap-3">
                        <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Login
                        </a>
                        <a class="btn btn-outline-primary btn-lg" asp-controller="Account" asp-action="SignUp">
                            <i class="bi bi-person-plus me-2"></i>
                            Sign Up
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .btn-lg {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 8px;
    }
</style>
