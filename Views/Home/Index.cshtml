@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">Welcome to Our Library</h1>
                <p class="lead mb-4">Discover thousands of books and start your reading journey today. Borrow, read, and explore our vast collection.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Get Started
                    </a>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-book me-2"></i>
                        Browse Books
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=600&h=600&fit=crop" 
                     alt="Library Books" 
                     class="img-fluid rounded-4 shadow-lg hero-img">
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col">
                <h2 class="fw-bold">Why Choose Us</h2>
                <p class="text-muted">Everything you need for a cozy reading experience</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-book-half fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Vast Collection</h5>
                    <p class="text-muted">Thousands of books across all genres</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-clock-history fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Easy Borrowing</h5>
                    <p class="text-muted">Borrow books instantly with one click</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-search fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Smart Search</h5>
                    <p class="text-muted">Find your favorite books by title or author</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f3f0;
        color: #4b3f36;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #fef5ec 0%, #f5e8dc 100%);
        color: #4b3f36;
        padding: 100px 0;
    }

    .hero-section h1 {
        color: #5e4033;
    }

    .hero-section p {
        color: #6d5747;
    }

    .hero-section .btn-primary {
        background-color: #a17c5a;
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

    .hero-section .btn-primary:hover {
        background-color: #7b5e42;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(123, 94, 66, 0.3);
    }

    .hero-section .btn-outline-primary {
        border-color: #a17c5a;
        color: #a17c5a;
    }

    .hero-section .btn-outline-primary:hover {
        background-color: #a17c5a;
        color: white;
    }

    .hero-section .hero-img {
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
    }

    /* Features Section */
    .features-section {
        background: #fff6ed;
    }

    .feature-card {
        background: #fff7f0;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .icon-wrapper {
        width: 70px;
        height: 70px;
        background: #d6bfa6;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .icon-wrapper i {
        color: #5e4033;
    }

    h2.fw-bold {
        color: #5e4033;
    }

    .text-muted {
        color: #7d6b5a !important;
    }
</style>
