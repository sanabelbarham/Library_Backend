@using Library.Models
@model User
@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle me-3">
                            <i class="bi bi-person-circle fs-2"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">User Profile</h3>
                            <p class="mb-0 opacity-75">View your account information</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    @if (Model != null)
                    {
                        <div class="user-info">
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="bi bi-hash text-primary me-2"></i>
                                    User ID
                                </div>
                                <div class="info-value">@Model.UserId</div>
                            </div>

                            <div class="info-item">
                                <div class="info-label">
                                    <i class="bi bi-person text-primary me-2"></i>
                                    Full Name
                                </div>
                                <div class="info-value">@Model.FullName</div>
                            </div>

                            <div class="info-item">
                                <div class="info-label">
                                    <i class="bi bi-envelope text-primary me-2"></i>
                                    Email
                                </div>
                                <div class="info-value">@Model.Email</div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4 pt-3 border-top">
                            <a asp-controller="User" asp-action="ChangeUserPassword" class="btn btn-outline-primary">
                                <i class="bi bi-shield-lock me-2"></i>
                                Change Password
                            </a>
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Back
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-exclamation-circle fs-1 text-muted mb-3"></i>
                            <p class="text-muted fs-5">No user data found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border: none;
    }
    
    .icon-circle {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .user-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .info-item {
        padding: 1.25rem;
        background: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .info-item:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }
    
    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }
    
    .info-value {
        font-size: 1.125rem;
        font-weight: 500;
        color: #212529;
        padding-left: 1.75rem;
    }
    
    .btn {
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
    }
</style>
